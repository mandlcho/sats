{
  "name": "sats-calculator",
  "version": "0.1.0",
  "description": "Electron desktop app that embeds the CoinGuides sats/BTC/fiat converter.",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "web": "http-server ./web -p 4173 -c-1"
  },
  "build": {
    "appId": "com.sats.calculator",
    "productName": "Sats Calculator",
    "files": [
      "electron/**/*",
      "web/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "keywords": [
    "electron",
    "bitcoin",
    "sats",
    "converter",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.1.4",
    "electron-builder": "^24.9.1",
    "http-server": "^14.1.1"
  }
}
